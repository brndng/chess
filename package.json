{
  "name": "chess",
  "version": "1.0.0",
  "description": "A chess app from scratch. Challenge friends and play at your convenience.",
  "main": "index.js",
  "engines" :{
    "node": "8.9.4",
    "npm": "5.6.0"
  },
  "proxy": "http://localhost:3000",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client:dev": "cd ui/client && npm run build:dev",
    "server:dev": "cd api && node server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server:dev\" \"npm run client:dev\"",
    "create-tables": "cd api && cd db && node create-tables.js",
    "start": "cd api && node server.js",
    "heroku-postbuild": "npm install && npm start && cd .. && cd ui/client && npm install && npm install --only=dev --no-shrinkwrap && npm run build:prod"
    
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brndng/chess.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brndng/chess/issues"
  },
  "homepage": "https://github.com/brndng/chess#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "fs": "0.0.1-security",
    "helmet": "^3.12.1",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "path": "^0.12.7",
    "pg": "^7.4.3",
    "sequelize": "^4.38.0",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "concurrently": "^3.6.0"
  }
}
